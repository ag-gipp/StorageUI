<div class="container">
    <div id="loginbox" style="margin-top:50px;" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
        <div class="panel panel-info">
            <div class="panel-heading">
                <div class="panel-title">Sign In</div>
                <div style="float:right; font-size: 80%; position: relative; top:-10px">
                    {{!--<a href="#">Forgot password?</a>--}}
                </div>
            </div>

            <div style="padding-top:30px" class="panel-body">

                <div style="display:none" id="login-alert" class="alert alert-danger col-sm-12"></div>
                {{# if errors}}
                    <div id="signupalert" class="alert alert-danger">
                        <p>Errors:</p>
                        <ul>
                            {{# each errors }}
                                <li>{{ this.msg }}</li>
                            {{/each}}
                        </ul>

                        <span></span>
                    </div>
                {{/if}}

                <form id="loginform" class="form-horizontal" role="form" action="/login/submit" method="post">

                    <div style="margin-bottom: 25px" class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                        <input id="login-username" type="text" class="form-control" name="username" value=""
                               placeholder="Username">
                    </div>

                    <div style="margin-bottom: 25px" class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                        <input id="login-password" type="password" class="form-control" name="password"
                               placeholder="Password">
                    </div>


                    {{!--<div class="input-group">
                        <div class="checkbox">
                            <label>
                                <input id="login-remember" type="checkbox" name="remember" value="1"> Remember me
                            </label>
                        </div>
                    </div>--}}


                    <div style="margin-top:10px" class="form-group">
                        <!-- Button -->

                        <div class="col-sm-12 controls">
                            <button id="btn-signup" type="submit button" class="btn btn-info"><i class="icon-hand-right"></i>
                                &nbsp Login
                            </button>
                            {{!--<a id="btn-login" href="#" class="btn btn-success" type="submit button">Login </a>--}}
                            {{!--<a id="btn-fblogin" href="#" class="btn btn-primary">Login with Facebook</a>--}}
                            <span style="padding-left: 1px; padding:15px; font-size:85%">
                                Don't have an account?
                                <a href="/register">
                                    Sign Up Here
                                </a>
                            </span>

                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

</div>