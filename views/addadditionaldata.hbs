<div class="container-fluid">
    <div class="panel panel-info">
        <div class="panel-heading">
            <h4>Add additional files to Storage.io. All files will be trusted timestamped. Please make sure
                that you provide metadata as much as possible! In case the dataset has no corresponding paper,
            just add it with 'none'.</h4>
        </div>
    </div>
    {{# if errors}}
        <div id="signupalert" class="alert alert-danger">
            <p>Errors:</p>
            <ul>
                {{# each errors }}
                    <li>{{ this }}</li>
                {{/each}}
            </ul>

            <span></span>
        </div>
    {{/if}}


    <div class="row">
        <form method="post" enctype="multipart/form-data" action="/add/uploadadditionaldata">
            <div class="col-sm-2"></div>
            <div class="col-md-8">
                <div class="panel"><h3 style="font-weight: bold">Data Details</h3></div>

                {{!--Corresponding Paper--}}
                <div class="form-group">
                    <label for="exampleFormControlSelect1">Select corresponding paper</label>
                    <select class="form-control" id="exampleFormControlSelect1" name="dataPaper">
                        <option>none</option>
                        {{# each addArticles }}
                            <option>{{this.title}}</option>
                        {{/each}}
                    </select>
                </div>

                {{!--Title--}}
                <div class="form-group">
                    <label for="exampleFormControlTextarea3">Dataset Title</label>
                    <textarea name="title" class="form-control" id="exampleFormControlTextarea3"
                              rows="1"></textarea>

                </div>



                {{!--Abstract--}}
                <div class="form-group">
                    <label for="exampleFormControlTextarea1">Abstract</label>
                    <textarea name="dataAbstract" class="form-control" id="exampleFormControlTextarea1"
                              rows="3"></textarea>
                </div>

                {{!--Authors--}}
                <div class="form-group">
                    <label class="control-label">Authors</label>
                    <div>
                        <input type="text" name="dataAuthors" class="form-control"
                               value="John Doe" data-role="tagsinput"/>
                    </div>
                </div>

                {{!--Tags--}}
                <div class="form-group">
                    <label class="control-label">Tags</label>
                    <div>
                        <input type="text" name="dataTags" class="form-control"
                               value="Rocketscience" data-role="tagsinput"/>
                    </div>
                </div>

                {{!--upload--}}
                <div class="form-group">
                    <label for="uploadField">FileUpload</label>
                    <input type="file" name="upl" class="form-control-file" id="uploadField"></input>
                </div>

                {{!--button--}}
                <div class="form-group">
                    <!-- Button -->
                    <div class="col-md-offset-5 col-md-9">
                        <button id="btn-signup" type="submit button" class="btn btn-info"><i
                                class="icon-hand-right"></i>
